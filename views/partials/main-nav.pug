nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href='/') ChitChat
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon

  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/') Home
      li.nav-item
      if isAuthenticated  
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Conversations
          .dropdown-menu
            a.dropdown-item(href='/conversations/') Conversations
            a.dropdown-item(href='/conversations/new') +
      li.nav-item
      if isAuthenticated      
        a.nav-link(href='/users/') Profile         
      if !isAuthenticated    
        li.nav-item
          a.nav-link(href='/users/new') Register
        li.nav-item
          a.nav-link(href='/login') Login 
      if isAuthenticated    
        li.nav-item
        form.nav-destroy(action=`/logout`, method="POST")
          input(type='submit', value="Logout")  